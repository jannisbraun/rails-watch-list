
<div class="body">
  <div class="container">
    <h1><%= @list.name %></h1>
    <hr>
    <div class="movies d-flex justify-content-between">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card rounded-5" style="width: 400px; box-shadow: 10px 10px 20px grey">
          <div class="header">
            <img src=<%= bookmark.movie.poster_url %> style="height: 500px; width: 100%; object-fit: cover" class="rounded-top-5">
          </div>
          <div class="body p-3">
            <div class="body-title text-center py-2" style="font-weight: 700; font-size: 24px; color: #1EDD88">
              <%= bookmark.movie.title %>
            </div>
            <hr>
            <div class="body-content d-flex py-2" style="font-style: italic">
              <%= bookmark.movie.rating %> Stars -
              <%= bookmark.comment %>
            </div>
            <hr>
            <div style="text-align: center" class="pt-3">
              <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-secondary btn-sm mx-3" %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <br>
    <div><%= link_to "Add bookmark", new_list_bookmark_path(@list), class: "btn btn-primary"  %></div>
    <br>
    <div><%= link_to "Back to overview", root_path, class: "btn btn-secondary" %></div>
  </div>
</div>
